<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Bulk Upload Result</title>
    <link href="/Css/CStyle.css" rel="stylesheet" />
  </head>
  <body>
    <%- include('../partials/navbar') %>
    <div class="container">
      <h1>Bulk Upload Summary</h1>

      <ul>
        <li>Total rows: <%= results.total %></li>
        <li>Inserted: <%= results.inserted %></li>
        <li>Skipped: <%= results.skipped %></li>
        <li>Failed: <%= results.failed %></li>
      </ul>

      <% if (results.errors && results.errors.length) { %>
      <h2>Details</h2>
      <ul>
        <% results.errors.forEach(e => { %>
        <li>Row <%= e.row %>: <%= e.reason %></li>
        <% }) %>
      </ul>
      <% } %>

      <p><a href="/Seller/productmanagement">Back to Product Management</a></p>
    </div>
  </body>
</html>
